<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Url Shortener</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
			integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<main class="bg-dark" style="height: 100vh">
			<div class="container">
				<h1 class="pt-5 text-white">Url Shortener</h1>
				<form
					action="/shortUrls"
					method="POST"
					class="my-5 form-inline"
				>
					<label for="fullUrl" class="sr-only">Url</label>
					<input
						type="url"
						name="fullUrl"
						id="fullUrl"
						placeholder="Url"
						class="form-control col mr-2"
						required
					/>
					<button class="btn btn-primary" type="submit">
						Shorten
					</button>
				</form>
				<table
					class="table table-dark table-striped table-hover table-responsive"
				>
					<thead>
						<tr>
							<th>Url</th>
							<th>Short Url</th>
						</tr>
					</thead>
					<tbody>
						<% shortUrls.forEach(shortUrl => { %>
						<tr>
							<td>
								<a href="<%= shortUrl.full %>"
									><%= shortUrl.fullShortened %></a
								>
							</td>
							<td>
								<a href="<%= shortUrl.short %>"
									><%= shortUrl.short %></a
								>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</main>
	</body>
</html>
